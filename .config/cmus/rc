# since we're not using dbus, might just as well disable it entirely
set mpris=false

############ colors ############
# default text color
set color_win_fg=default
# overall background color
set color_win_bg=default

# command-line colors
set color_cmdline_bg=default
set color_cmdline_fg=default
set color_error=1
set color_info=4
set color_separator=0
# bottom status line
set color_statusline_bg=default
set color_statusline_fg=4
# bottom title line
set color_titleline_bg=default
set color_titleline_fg=3
set color_titleline_attr=bold
# top title area
set color_win_title_bg=default
set color_win_title_fg=4
set color_win_title_attr=bold

##### playing file colors #####
# unselected currently playing track's text
set color_win_cur=3
set color_win_cur_attr=bold
set color_win_cur_sel_attr=bold
# active selection for currently playing track
set color_win_cur_sel_bg=0
set color_win_cur_sel_fg=3
# inactive selection for currently playing track
set color_win_inactive_cur_sel_bg=-1
set color_win_inactive_cur_sel_fg=3
##### non-playing file colors #####
# active selection
set color_win_sel_bg=3
set color_win_sel_fg=0
set color_win_sel_attr=bold
# inactive selection
set color_win_inactive_sel_bg=8
set color_win_inactive_sel_fg=7
set color_win_inactive_sel_attr=bold

##### file browser view colors #####
# directory listing color
set color_win_dir=7

